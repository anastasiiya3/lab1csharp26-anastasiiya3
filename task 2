using System;

class Program
{
    static void Main()
    {
        Console.OutputEncoding = System.Text.Encoding.UTF8;
        
        // Введення тризначного числа
        Console.Write("Введіть тризначне число: ");
        
        int number;
        while (!int.TryParse(Console.ReadLine(), out number) || number < 100 || number > 999)
        {
            Console.Write("Помилка! Введіть тризначне число (100-999): ");
        }
        
        // Виділення цифр числа
        int firstDigit = number / 100;           // перша цифра
        int lastDigit = number % 10;              // остання цифра
        
        // Виведення інформації про число
        Console.WriteLine($"\nЧисло: {number}");
        Console.WriteLine($"Перша цифра: {firstDigit}");
        Console.WriteLine($"Остання цифра: {lastDigit}");
        
        // Порівняння цифр
        Console.Write("Результат: ");
        if (firstDigit > lastDigit)
        {
            Console.WriteLine($"перша цифра ({firstDigit}) більша за останню ({lastDigit})");
        }
        else if (firstDigit < lastDigit)
        {
            Console.WriteLine($"остання цифра ({lastDigit}) більша за першу ({firstDigit})");
        }
        else
        {
            Console.WriteLine($"перша і остання цифри рівні ({firstDigit})");
        }
        
        Console.WriteLine("\nНатисніть будь-яку клавішу для завершення...");
        Console.ReadKey();
    }
}
